<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gra_Memory.MainPage"
             Title="Menu Główne">

    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

        <Label Text="GRA MEMORY"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label Text="Podaj rozmiar planszy (np. 4):"
               HorizontalOptions="Center" />

        <Entry x:Name="SizeEntry"
               Placeholder="Wpisz parzystą liczbę (2-8 np. 4 da planszę 4x4). "
               Keyboard="Numeric"
               HorizontalTextAlignment="Center"
               WidthRequest="250" />

        <Label Text="Zasady: Liczba musi być parzysta (np. 4 da planszę 4x4). Max: 8."
               FontSize="12"
               TextColor="Gray"
               HorizontalOptions="Center"/>

        <Button Text="ZACZNIJ GRĘ"
                Clicked="OnStartGameClicked"
                HeightRequest="50"
                BackgroundColor="#512BD4"
                TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>